pipeline {
    agent any

    environment {
        
    }

    stages {
        stage('Initialize Terraform') {
            steps {
                script {
                    // Initialize Terraform (downloads providers and sets up backend)
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    // Run terraform plan to check changes
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                input message: 'Approve Terraform Apply?', ok: 'Apply'

                script {
                    // Run terraform apply to provision the resources
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Post-Deployment') {
            steps {
                script {
                    // Perform any post-deployment actions, such as testing the VM
                    echo 'Deployment Complete!'
                }
            }
        }
    }

    post {
        always {
            // Clean up, run tests, or send notifications
            echo 'Pipeline complete.'
        }
        success {
            echo 'VM provisioned successfully.'
        }
        failure {
            echo 'Terraform apply failed.'
        }
    }
}
